<%- include('./partials/header') %>

<style>
  body {
    font-family: 'Poppins', sans-serif;
    background-color: #f9fafb;
    color: #333;
  }

  .cart-container {
    max-width: 1100px;
    margin: 60px auto;
    background: #fff;
    border-radius: 12px;
    padding: 30px 40px;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
  }

  .cart-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 2px solid #eee;
    padding-bottom: 10px;
    margin-bottom: 20px;
  }

  .cart-header h2 {
    font-weight: 600;
  }

  .cart-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #eee;
    padding: 15px 0;
  }

  .cart-item img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 8px;
    border: 1px solid #ddd;
  }

  .cart-details {
    flex: 1;
    margin-left: 15px;
  }

  .cart-details h3 {
    font-size: 16px;
    margin: 0;
  }

  .cart-details p {
    font-size: 14px;
    color: #666;
    margin-top: 4px;
  }

  .cart-quantity {
    font-weight: 600;
  }

  .cart-price {
    font-size: 16px;
    font-weight: 600;
    color: #111;
    margin-right: 15px;
  }

  .cart-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 30px;
  }

  .total {
    font-size: 18px;
    font-weight: 700;
  }

  .btn {
    padding: 10px 18px;
    border-radius: 6px;
    border: none;
    cursor: pointer;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .btn-remove {
    background: #f87171;
    color: #fff;
  }

  .btn-remove:hover {
    background: #dc2626;
  }

  .btn-checkout {
    background: #22c55e;
    color: white;
  }

  .btn-checkout:hover {
    background: #16a34a;
  }

  .empty-cart {
    text-align: center;
    padding: 60px 0;
  }

  .empty-cart h3 {
    color: #555;
  }
</style>

<div class="cart-container">
  <div class="cart-header">
    <h2>üõí My Cart</h2>
    <a href="/users/shop" class="btn btn-checkout" style="background: #3b82f6;">Continue Shopping</a>
  </div>

  <% if (user && user[0] && user[0].cart.length > 0) { %>
    <% let total = 0; %>
    <% user[0].cart.forEach(item => { 
      total += item.productId.price * item.quantity; 
    %>
      <div class="cart-item">
        <% if (item.productId.image) { %>
          <img src="data:image/jpeg;base64,<%= item.productId.image.toString('base64') %>" alt="<%= item.productId.name %>">
        <% } else { %>
          <img src="/images/placeholder.png" alt="No Image">
        <% } %>

        <div class="cart-details">
          <h3><%= item.productId.name %></h3>
          <p>‚Çπ<%= item.productId.price %> √ó <span class="cart-quantity"><%= item.quantity %></span></p>
        </div>

        <div class="cart-price">‚Çπ<%= (item.productId.price * item.quantity).toFixed(2) %></div>

        <a href="/users/cart/remove/<%= item.productId._id %>" class="btn btn-remove">Remove</a>
      </div>
    <% }) %>

    <div class="cart-footer">
      <div class="total">Total: ‚Çπ<%= total.toFixed(2) %></div>
      <a href="/users/checkout" class="btn btn-checkout">Proceed to Checkout</a>
    </div>
  <% } else { %>
    <div class="empty-cart">
      <h3>Your cart is empty üõçÔ∏è</h3>
      <a href="/users/shop" class="btn btn-checkout" style="background: #3b82f6;">Go to Shop</a>
    </div>
  <% } %>
</div>

<%- include('./partials/footer') %>
