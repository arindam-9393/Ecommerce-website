<%- include('./partials/header') %>

<style>
  body { font-family: "Poppins", sans-serif; background: #f0f2f5; }
  .container { width: 400px; margin: 100px auto; background: #fff; padding: 30px; border-radius: 12px; box-shadow: 0 0 15px rgba(0,0,0,0.1); text-align: center; }
  input { width: 80%; padding: 10px; margin: 10px 0; border-radius: 8px; border: 1px solid #ccc; }
  button { background: #007bff; color: #fff; padding: 10px 20px; border-radius: 8px; border: none; cursor: pointer; }
  button:hover { background: #0056b3; }
  .error { color: red; }
  .success { color: green; }
</style>

<div class="container">
  <h2>Reset Password</h2>

  <% if (msg === 'otpsent') { %>
    <p class="success">OTP sent to your email!</p>
  <% } %>

  <form action="/users/reset-password" method="POST">
    <input type="hidden" name="email" value="<%= email %>" />
    <input type="text" name="otp" placeholder="Enter OTP" required />
    <input type="password" name="password" placeholder="Enter new password" required />
    <br>
    <button type="submit">Reset Password</button>
  </form>

  <% if (error) { %>
    <p class="error"><%= error %></p>
  <% } %>
</div>

<%- include('./partials/footer') %>
