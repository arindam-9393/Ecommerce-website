<%- include('./partials/header') %>

<!-- Remix Icons -->
<link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet">

<style>
/* Global Styles */
body {
  background-color: #f9fafb;
  font-family: 'Poppins', sans-serif;
  color: #1f2937;
  margin: 0;
  padding: 0;
}

/* Navbar */
.navbar {
  background: linear-gradient(90deg, #2563eb, #3b82f6);
  color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.8rem 2rem;
  box-shadow: 0 2px 8px rgba(0,0,0,0.15);
  position: sticky;
  top: 0;
  z-index: 1000;
}

.navbar .logo {
  font-weight: 700;
  font-size: 1.5rem;
  letter-spacing: 0.5px;
}

.navbar .nav-actions {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.navbar input[type="text"] {
  padding: 6px 12px;
  border-radius: 20px;
  border: none;
  outline: none;
  width: 220px;
  color: #111827;
  background-color: #ffffff;
}

.navbar input[type="text"]::placeholder {
  color: #9ca3af;
}

.navbar form button {
  padding: 6px 12px;
  margin-left: 6px;
  border: none;
  border-radius: 20px;
  background-color: #1d4ed8;
  color: white;
  cursor: pointer;
  font-weight: 500;
  transition: background 0.2s;
}

.navbar form button:hover {
  background-color: #2563eb;
}

.navbar a {
  color: white;
  font-weight: 500;
  text-decoration: none;
  transition: color 0.2s ease;
}

.navbar a:hover {
  color: #e0e7ff;
}

/* Profile dropdown */
.profile-dropdown {
  position: relative;
  display: inline-block;
}

.profile-dropdown-content {
  display: none;
  position: absolute;
  right: 0;
  background-color: white;
  min-width: 150px;
  box-shadow: 0px 4px 8px rgba(0,0,0,0.1);
  border-radius: 8px;
  overflow: hidden;
}

.profile-dropdown-content a {
  color: #1f2937;
  padding: 10px 14px;
  text-decoration: none;
  display: block;
  transition: background 0.2s;
}

.profile-dropdown-content a:hover {
  background-color: #f3f4f6;
}

.profile-dropdown:hover .profile-dropdown-content {
  display: block;
}

/* Cart Badge */
.cart-link {
  position: relative;
}

.cart-link .cart-badge {
  position: absolute;
  top: -6px;
  right: -8px;
  background-color: #ef4444;
  color: white;
  font-size: 0.7rem;
  padding: 1px 4px;
  border-radius: 50%;
}

/* Sidebar */
.category-box {
  background: #ffffff;
  border: 1px solid #e5e7eb;
  border-radius: 10px;
  padding: 1rem;
  margin-bottom: 1.5rem;
  transition: all 0.3s ease;
}

.category-box a {
  display: block;
  padding: 8px 12px;
  margin-bottom: 6px;
  border-radius: 6px;
  color: #374151;
  text-decoration: none;
  font-size: 0.95rem;
  transition: background 0.2s, color 0.2s;
}

.category-box a:hover {
  background-color: #3b82f6;
  color: white;
}

/* Products */
.product-card {
  width: 16rem;
  background-color: white;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 4px 10px rgba(0,0,0,0.06);
  transition: all 0.3s ease;
  cursor: pointer;
}

.product-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 8px 20px rgba(0,0,0,0.1);
}

.product-card img {
  height: 12rem;
  width: 100%;
  object-fit: cover;
}

.product-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.8rem 1rem;
}

.product-info h3 {
  font-size: 1rem;
  font-weight: 600;
}

.product-info h4 {
  font-size: 0.95rem;
  color: #111;
  font-weight: 500;
}

.add-btn {
  width: 32px;
  height: 32px;
  background-color: #000;
  border-radius: 50%;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background 0.2s;
}

.add-btn:hover {
  background-color: #333;
}

/* Responsive */
@media (max-width: 1024px) {
  .shop-layout {
    flex-direction: column;
  }
  .sidebar {
    width: 100%;
    margin-bottom: 2rem;
  }
  .products {
    width: 100%;
  }
}
</style>

<!-- NAVBAR -->
<div class="navbar">
  <div class="logo">MyStore üõçÔ∏è</div>

  <div class="nav-actions">
    <form action="/users/shop" method="GET" style="display:flex; align-items:center;">
      <input type="text" name="search" placeholder="Search products..." />
      <button type="submit">Search</button>
    </form>

    <a href="/users/cart" class="cart-link">
      <i class="ri-shopping-cart-2-line text-2xl"></i>
      <% if (locals.user && user.cart && user.cart.length > 0) { %>
        <span class="cart-badge"><%= user.cart.length %></span>
      <% } %>
    </a>

    <div class="profile-dropdown">
      <i class="ri-user-3-line text-2xl cursor-pointer"></i>
      <div class="profile-dropdown-content">
        <a href="/users/profile">My Profile</a>
        <a href="/users/orders">My Orders</a>
        <a href="/users/logout">Logout</a>
      </div>
    </div>
  </div>
</div>

<!-- SHOP SECTION -->
<div class="w-full min-h-screen flex items-start px-20 py-16 shop-layout">

  <!-- Sidebar -->
  <div class="w-[25%] sidebar">
    <div class="category-box">
      <h4 class="font-semibold mb-3">üìÇ Categories</h4>
      <a href="/users/shop?filter=new">New Collection</a>
      <a href="/users/shop">All Products</a>
      <a href="/users/shop?filter=discounted">Discounted</a>
      <a href="/users/shop?filter=trending">Trending Now</a>
      <a href="/users/shop?filter=limited">Limited Edition</a>
    </div>
  </div>

  <!-- Products Section -->
  <div class="w-[75%] pl-10 products flex flex-wrap gap-6">
    <% products.forEach(function(product){ %>
      <div class="product-card" onclick="window.location.href='/users/product/<%= product._id %>'">
        <% if (product.image) { %>
          <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
        <% } else { %>
          <img src="/images/placeholder.png" alt="No image available">
        <% } %>
        <div class="product-info">
          <div>
            <h3><%= product.name %></h3>
            <h4>‚Çπ <%= product.price %></h4>
          </div>
          <a class="add-btn" href="/users/cart/add/<%= product._id %>">
            <i class="ri-add-line"></i>
          </a>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<%- include('./partials/footer') %>
