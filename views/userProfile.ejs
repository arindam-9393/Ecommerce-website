<%- include('./partials/header') %>

<div class="w-full min-h-screen flex justify-center items-start py-16 bg-gray-100">
  <div class="bg-white rounded-xl shadow-md p-8 w-2/5">
    <!-- Profile Image & Name -->
    <div class="flex flex-col items-center">
      <% if (user.profileImage) { %>
        <img class="w-32 h-32 rounded-full object-cover border-2 border-gray-300" src="data:image/jpeg;base64,<%= user.profileImage.toString('base64') %>" alt="Profile Image">
      <% } else { %>
        <img class="w-32 h-32 rounded-full object-cover border-2 border-gray-300" src="/images/placeholder.png" alt="Profile Image">
      <% } %>

      <h2 class="mt-4 text-2xl font-semibold"><%= user.name %></h2>
      <p class="text-gray-500 mt-1"><%= user.email %></p>
    </div>

    <!-- Profile Details -->
    <div class="mt-8 space-y-3">
      <div class="flex justify-between">
        <p class="font-medium">Phone:</p>
        <span><%= user.phone || "Not added" %></span>
      </div>
      <div class="flex justify-between">
        <p class="font-medium">Address:</p>
        <span><%= user.address || "Not added" %></span>
      </div>
      <div class="flex justify-between">
        <p class="font-medium">Joined On:</p>
        <span><%= user && user.createdAt ? user.createdAt.toDateString() : "N/A" %></span>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-6 flex justify-center gap-4">
      <a href="/users/profile/edit" class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition">Edit Profile</a>
      <a href="/users/orders" class="px-6 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition">My Orders</a>
      <a href="/users/shop" class="px-6 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700 transition">Back to Shop</a>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
